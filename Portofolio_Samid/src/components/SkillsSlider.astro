---
const skills = [
  { name: "Astro", icon: "/icons/skills/astro.png" },
  { name: "JavaScript", icon: "/icons/skills/js.png" },
  { name: "CSS", icon: "/icons/skills/css.png" },
  { name: "HTML", icon: "/icons/skills/html.png" },
  { name: "Flutter", icon: "/icons/skills/flutter.png" },
  { name: "MySQL", icon: "/icons/skills/mysql.png" },
  { name: "Laravel", icon: "/icons/skills/laravel.png" },
  { name: "Node.js", icon: "/icons/skills/nodejs.png" },
  { name: "Git", icon: "/icons/skills/git.png" },
  { name: "PHP", icon: "/icons/skills/php.png" },
  { name: "Figma", icon: "/icons/skills/figma.png" },
];
---

<section id="skills" class="overflow-hidden py-16 bg-black text-white">
  <div class="slider">
    <div class="slide-track">
      {/* Original Set */}
      {skills.map((skill) => (
        <div class="slide">
          <img src={skill.icon} alt={skill.name} />
          <span>{skill.name}</span>
        </div>
      ))}

      {/* Duplicate Set for Infinite Loop */}
      {skills.map((skill) => (
        <div class="slide">
          <img src={skill.icon} alt={skill.name} />
          <span>{skill.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .slider {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .slide-track {
    display: flex;
    align-items: center;
    /* total item 11 Ã— 2 = 22 */
    width: calc(220px * 22);
    animation: scroll 30s linear infinite;
  }

  .slide {
    width: 220px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 12px;
    padding: 1rem;
  }

  .slide img {
    height: 48px;
    width: auto;
    object-fit: contain;
    opacity: 0.9;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .slide img:hover {
    transform: scale(1.1);
    opacity: 1;
  }

  .slide span {
    font-size: 1rem;
    color: #d6d6d6;
    font-weight: 500;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
