<nav id="navbar" class="fixed top-0 left-0 w-full bg-black/70 backdrop-blur-md text-white z-50 transition-all duration-300">
  <div class="max-w-6xl mx-auto flex justify-center gap-8 py-4 font-medium">
    <a href="#home" class="nav-link hover:text-purple-400 transition-colors duration-200">Home</a>
    <a href="#about" class="nav-link hover:text-purple-400 transition-colors duration-200">About Me</a>
    <a href="#projects" class="nav-link hover:text-purple-400 transition-colors duration-200">Projects</a>
    <a href="#learning" class="nav-link hover:text-purple-400 transition-colors duration-200">Learning</a>
    <a href="#contact" class="nav-link hover:text-purple-400 transition-colors duration-200">Contact</a>
  </div>
</nav>

<style>
  html {
    scroll-behavior: smooth;
  }

  /* Active link styling */
  .nav-link.active {
    color: #c084fc; /* purple-400 */
    font-weight: 600;
    border-bottom: 2px solid #c084fc;
    padding-bottom: 2px;
  }
</style>

<script>
  const sections = document.querySelectorAll('section[id]');
  const navLinks = document.querySelectorAll<HTMLAnchorElement>('.nav-link');
  const navbar = document.getElementById('navbar') as HTMLElement | null;

  window.addEventListener('scroll', () => {
    let current: string | null = null;
    sections.forEach((section) => {
      const el = section as HTMLElement;
      const sectionTop = el.offsetTop - 120;
      if (window.scrollY >= sectionTop) {
        current = el.getAttribute('id');
      }
    });

    navLinks.forEach((link) => {
      link.classList.remove('active');
      if (current && link.getAttribute('href') === `#${current}`) {
        link.classList.add('active');
      }
    });
  });

  // Navbar shadow effect
  window.addEventListener('scroll', () => {
    if (!navbar) return; // âœ… pastikan navbar ada
    if (window.scrollY > 10) {
      navbar.classList.add('shadow-lg', 'bg-black/90');
    } else {
      navbar.classList.remove('shadow-lg', 'bg-black/90');
    }
  });
</script>

